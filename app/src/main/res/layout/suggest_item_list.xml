<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_200"
    android:layout_height="@dimen/dp_220"
    android:layout_margin="@dimen/dp_5"
    android:background="@drawable/background_border_suggest">

    <ImageView
        android:id="@+id/image_suggest_art_user"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:scaleType="fitXY"
        android:src="@drawable/genreallmusic"
        app:layout_constraintBottom_toTopOf="@id/text_suggest_song_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_suggest_song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:maxLines="1"
        android:text="@string/sing"
        android:textColor="@color/color_black"
        app:layout_constraintBottom_toTopOf="@id/text_suggest_auth_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_suggest_art_user" />

    <TextView
        android:id="@+id/text_suggest_auth_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:text="@string/user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_suggest_song_name" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/ic_play_arrow_black_24dp"
        app:layout_constraintBottom_toTopOf="@id/text_suggest_song_name"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
